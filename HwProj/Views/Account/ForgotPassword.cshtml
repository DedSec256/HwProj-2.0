@model HwProj.Models.ManagerModels.ForgotPasswordViewModel
@{
    ViewBag.Title = "Восстановление пароля";
}

<br />
<div class="row">
    <div class="offset-lg-4 col-lg-4 offset-md-3 col-md-6 offset-sm-4 col-sm-8 col-12">
        <form class="jumbotron" id="forgot-password-form">
            @using (Html.BeginForm("ForgotPassword", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
            {
                @Html.AntiForgeryToken()
                <h4 class="text-center">@ViewBag.Title</h4>
                <hr />
                <p class="text-center text-small text-muted">
                    Введите адрес своей электронной почты, чтобы получить письмо с ссылкой для восстановления пароля
                </p>
                @Html.ValidationSummary("", new { @class = "text-danger" })
                <div class="form-group">
                    @Html.TextBoxFor(m => m.Email, new { @class = "form-control", placeholder = "Электронная почта" })
                </div>
                <div class="form-group">
                    <button class="btn btn-block btn-primary" type="submit">Сбросить пароль</button>
                </div>
            }
        </form>
    </div>
</div>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
